#include <stdio.h>

int main() {

  char *input = NULL;
  size_t inputLength = 0;
  size_t readInput;

  printf("Please enter some text: ");

  readInput = getline(&input, &inputLength, stdin);

  if (readInput != -1) {
    printf("You entered: %s", input);

  } else {
    perror("Error reading line");
  }
  return 0;
}
